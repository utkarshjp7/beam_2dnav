<?xml version="1.0"?>
        
<launch>

        <!-- start sensor-->
        <include file="$(find openni2_launch)/launch/openni2.launch">
                <arg name="camera" default="asus"/>
        </include>
        <!--
	<include file="$(find openni_launch)/launch/openni.launch">
                <arg name="camera" default="kinect"/>
        </include>
	-->
	<!-- Convert depth data into laserscan-->
        <node pkg="depthimage_to_laserscan" type="depthimage_to_laserscan" name="depthimage_to_laserscan">
                <param name="scan_height" value="5"/>
		<param name="output_frame_id" value="asus_depth_frame"/>
                <remap from="image" to="/asus/depth/image_raw"/>
        </node>
	<!--
        <node pkg="depthimage_to_laserscan" type="depthimage_to_laserscan" name="depthimage_to_laserscan">
                <param name="scan_height" value="10"/>
		<param name="output_frame_id" value="kinect_depth_frame"/>
                <remap from="image" to="/kinect/depth/image_raw"/>
        </node>
	-->
</launch>
